{
  "name": "backend",
  "author": "Dan",
  "version": "0.0.1",
  "description": "Visual database for employees on a car sales website",
  "main": "src/app.ts",
  "scripts": {
    "start": "nodemon -r dotenv/config src/app.ts",
    "dev": "ts-node -r dotenv/config src/app.ts",
    "lint": "eslint \"**/*.{ts,js}\"",
    "lint --fix": "eslint **/*.{ts,js} --fix --color"
  },
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "vin-generator": "^1.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.4",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "husky": "4.3.5",
    "lint-staged": "11.1.2",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "yarn lint --fix"
  }
}
